<div class="page-header">
  <h1>Viewers</h1>
</div>

<p><a href="/viewers/new" class="btn btn-primary">Add a New Viewer</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Child</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @viewers.each do |viewer| %>
      <tr>
        <td><%= viewer.child_id %></td>
        <td><%= viewer.user_id %></td>
        <td>
          <a href="/viewers/<%= viewer.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/viewers/<%= viewer.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_viewer/<%= viewer.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

