<div class="page-header">
  <% if params[:child_id] != nil %>
    <h1><%= Child.find(params[:child_id]).name %>'s Sleeps</h1>
  <% else %>
    <h1>Sleeps</h1>
  <% end %>
</div>

<p><a href="/sleeps/new" class="btn btn-primary">Add a New Sleep</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Child</th>
      <th>Date</th>
      <th>Time</th>
      <th>Category</th>
      <th>Duration hours</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sleeps.each do |sleep| %>
      <tr>
        <td><a href="/children/<%= sleep.child_id %>/dayview/<%= Date.today %>"><%= Child.find(sleep.child_id).name %></a></td>
        <td><%= sleep.date %></td>
        <td><%= sleep.time.strftime("%I:%M %p") %></td>
        <td><%= sleep.category %></td>
        <td><%= sleep.duration_hours %></td>
        <td><%= User.find(sleep.user_id).username %></td>
        <td>
          <a href="/sleeps/<%= sleep.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/sleeps/<%= sleep.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_sleep/<%= sleep.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

