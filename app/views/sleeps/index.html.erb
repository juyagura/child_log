<div class="page-header">
  <h1>Sleeps</h1>
</div>

<p><a href="/sleeps/new" class="btn btn-primary">Add a New Sleep</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Category</th>
      <th>Date</th>
      <th>Time</th>
      <th>Duration hours</th>
      <th>Child</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sleeps.each do |sleep| %>
      <tr>
        <td><%= sleep.category %></td>
        <td><%= sleep.date %></td>
        <td><%= sleep.time %></td>
        <td><%= sleep.duration_hours %></td>
        <td><%= sleep.child_id %></td>
        <td><%= sleep.user_id %></td>
        <td>
          <a href="/sleeps/<%= sleep.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/sleeps/<%= sleep.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_sleep/<%= sleep.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

