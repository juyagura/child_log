<div class="page-header">
  <% if params[:child_id] != nil %>
    <h1><%= Child.find(params[:child_id]).name %>'s Baths</h1>
  <% else %>
    <h1>Baths</h1>
  <% end %>
</div>

<p><a href="/baths/new" class="btn btn-primary">Add a New Bath</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Child</th>
      <th>Date</th>
      <th>Time</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @baths.each do |bath| %>
      <tr>
        <td><a href="/children/<%= bath.child_id %>/dayview/<%= Date.today %>"><%= Child.find(bath.child_id).name %></a></td>
        <td><%= bath.date %></td>
        <td><%= bath.time.strftime("%I:%M %p") %></td>
        <td><%= User.find(bath.user_id).username %></td>
        <td>
          <a href="/baths/<%= bath.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/baths/<%= bath.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_bath/<%= bath.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

