<div class="page-header">
  <% if params[:child_id] != nil %>
    <h1><%= Child.find(params[:child_id]).name %>'s Photos</h1>
  <% else %>
    <h1>Photos</h1>
  <% end %>
</div>

<p><a href="/photos/new" class="btn btn-primary">Add a New Photo</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Child</th>
      <th>Image</th>
      <th>Caption</th>
      <th>Date</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><a href="/children/<%= photo.child_id %>/dayview/<%= Date.today %>"><%= Child.find(photo.child_id).name %></a></td>
        <td><img src="<%= photo.image %>"></td>
        <td><%= photo.caption %></td>
        <td><%= photo.date %></td>
        <td><%= User.find(photo.user_id).username %></td>
        <td>
          <a href="/photos/<%= photo.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/photos/<%= photo.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

