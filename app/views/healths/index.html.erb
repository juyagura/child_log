<div class="page-header">
  <h1>Healths</h1>
</div>

<p><a href="/healths/new" class="btn btn-primary">Add a New Health</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Date</th>
      <th>Time</th>
      <th>Child</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @healths.each do |health| %>
      <tr>
        <td><%= health.description %></td>
        <td><%= health.date %></td>
        <td><%= health.time %></td>
        <td><%= health.child_id %></td>
        <td><%= health.user_id %></td>
        <td>
          <a href="/healths/<%= health.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/healths/<%= health.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_health/<%= health.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

