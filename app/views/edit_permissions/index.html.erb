<div class="page-header">
  <h1>Edit Permissions</h1>
</div>

<p><a href="/edit_permissions/new" class="btn btn-primary">Add a New Edit Permission</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Child</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @edit_permissions.each do |edit_permission| %>
      <tr>
        <td><%= edit_permission.child.name %></td>
        <td><%= edit_permission.user.username %></td>
        <td>
          <a href="/edit_permissions/<%= edit_permission.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
<!--           <a href="/edit_permissions/<%= edit_permission.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a> -->
        </td>
        <td>
          <a href="/delete_edit_permission/<%= edit_permission.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

