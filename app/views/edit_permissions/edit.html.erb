<div class="page-header">
  <h1>Edit Edit Permission #<%= @edit_permission.id %></h1>
</div>

<% if @edit_permission.errors.any? %>
  <% @edit_permission.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_edit_permission/<%= @edit_permission.id %>" class="form-horizontal">
  <!-- Label and input for child_id -->
  <div class="form-group">
    <label for="child_id" class="col-sm-2 control-label">
      Child
    </label>
    <div class="col-sm-10">
      <select name="child_id" class="form-control">
        <% if @edit_permission.child_id != nil %>
          <option value="<%= @edit_permission.child_id %>" selected><%= Child.find(@edit_permission.child_id).name %></option>
        <% end %>
        <% current_user.own_children.each do |child| %>
          <option value="<%= child.id %>">
            <%= child.name %>
          </option>
        <% end %>
      </select>
    </div>
  </div>

  <!-- Label and input for user_id -->
  <div class="form-group">
    <div class="col-sm-10">
      <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Edit Permission" class="btn btn-primary">
    </div>
  </div>
</form>
