<div class="page-header">
  <h1>Add Diaper</h1>
</div>

<% if @diaper.errors.any? %>
  <% @diaper.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_diaper" class="form-horizontal">
  <!-- Label and input for category -->
  <div class="form-group">
    <label for="category" class="col-sm-2 control-label">
      Category
    </label>
    <div class="col-sm-10">
      <input type="text" id="category" name="category" placeholder="Category" class="form-control" value="<%= @diaper.category %>">
    </div>
  </div>

  <!-- Label and input for description -->
  <div class="form-group">
    <label for="description" class="col-sm-2 control-label">
      Description
    </label>
    <div class="col-sm-10">
      <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @diaper.description %></textarea>
    </div>
  </div>

  <!-- Label and input for date -->
  <div class="form-group">
    <label for="date" class="col-sm-2 control-label">
      Date
    </label>
    <div class="col-sm-10">
      <input type="text" id="datepicker" name="date" placeholder="Date" class="form-control" value="<%= @diaper.date %>">
    </div>
  </div>

  <script type="text/javascript">
    $('#datepicker').datepicker({
      dateFormat: "yy-mm-dd"
    });
  </script>

  <!-- Label and input for time -->
  <div class="form-group">
    <label for="time" class="col-sm-2 control-label">
      Time
    </label>
    <div class="col-sm-10">
      <input type="text" id="time" name="time" placeholder="Time" class="form-control" value="<%= @diaper.time %>">
    </div>
  </div>

  <!-- Label and input for child_id -->
  <div class="form-group">
    <label for="child_id" class="col-sm-2 control-label">
      Child
    </label>
    <div class="col-sm-10">
      <input type="text" id="child_id" name="child_id" placeholder="Child" class="form-control" value="<%= @diaper.child_id %>">
    </div>
  </div>

  <!-- Label and input for user_id -->
  <div class="form-group">
    <div class="col-sm-10">
      <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Diaper" class="btn btn-primary">
    </div>
  </div>
</form>
