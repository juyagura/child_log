<div class="page-header">
  <h1>Photo comments</h1>
</div>

<p><a href="/photo_comments/new" class="btn btn-primary">Add a New Photo Comment</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Content</th>
      <th>Photo</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @photo_comments.each do |photo_comment| %>
      <tr>
        <td><%= photo_comment.content %></td>
        <td><%= photo_comment.photo_id %></td>
        <td><%= photo_comment.user_id %></td>
        <td>
          <a href="/photo_comments/<%= photo_comment.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/photo_comments/<%= photo_comment.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_photo_comment/<%= photo_comment.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

